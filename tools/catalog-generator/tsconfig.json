{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES2020",
    "target": "ES2019",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
