{
  "id": "agent-tooling-clis",
  "version": "1.2.0",
  "name": "Agent Tooling CLIs",
  "description": "Installs optional coding agent client CLIs (Codex, Claude, Gemini).",
  "documentationURL": "https://github.com/airnub-labs/devcontainers-catalog",
  "options": {
    "installCodex": {
      "type": "boolean",
      "default": true,
      "description": "Install the Codex CLI."
    },
    "installClaude": {
      "type": "boolean",
      "default": false,
      "description": "Install the Claude CLI."
    },
    "installGemini": {
      "type": "boolean",
      "default": false,
      "description": "Install the Gemini CLI."
    },
    "codexVersion": {
      "type": "string",
      "default": "latest",
      "description": "Version (semver or tag) of the Codex CLI to install."
    },
    "claudeVersion": {
      "type": "string",
      "default": "latest",
      "description": "Version (semver or tag) of the Claude CLI to install."
    },
    "geminiVersion": {
      "type": "string",
      "default": "latest",
      "description": "Version (semver or tag) of the Gemini CLI to install."
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
