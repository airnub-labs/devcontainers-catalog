{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LessonEnv",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "additionalProperties": false,
  "properties": {
    "apiVersion": { "type": "string", "const": "airnub.devcontainers/v1" },
    "kind":       { "type": "string", "const": "LessonEnv" },
    "metadata": {
      "type": "object",
      "required": ["org", "course", "lesson"],
      "additionalProperties": false,
      "properties": {
        "org":    { "type": "string", "minLength": 1 },
        "course": { "type": "string", "minLength": 1 },
        "lesson": { "type": "string", "minLength": 1 }
      }
    },
    "spec": {
      "type": "object",
      "required": ["base_preset", "image_tag_strategy"],
      "additionalProperties": false,
      "properties": {
        "base_preset": {
          "type": "string",
          "enum": [
            "full",
            "node-pnpm",
            "python",
            "python-prefect",
            "python-airflow",
            "python-dagster",
            "ts-temporal"
          ]
        },
        "image_tag_strategy": {
          "type": "string",
          "enum": ["ubuntu-24.04"]
        },
        "vscode_extensions": { "type": "array", "items": { "type": "string" } },
        "settings": { "type": "object", "additionalProperties": true },
        "features": {
          "type": "object",
          "description": "Optional extra Features map if needed beyond preset"
        },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "enum": [
                  "redis",
                  "supabase",
                  "kafka",
                  "inbucket",
                  "prefect",
                  "airflow",
                  "dagster",
                  "temporal"
                ]
              },
              "vars": { "type": "object", "additionalProperties": true }
            }
          }
        },
        "emit_aggregate_compose": {
          "type": "boolean",
          "default": true
        },
        "env": { "type": "object", "additionalProperties": { "type": "string" } },
        "secrets_placeholders": { "type": "array", "items": { "type": "string" } },
        "resources": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        },
        "starter_repo": {
          "type": "object",
          "required": ["url"],
          "additionalProperties": false,
          "properties": {
            "url": { "type": "string", "format": "uri", "minLength": 1 },
            "path": { "type": "string", "minLength": 1, "default": "/workspace" }
          }
        }
      }
    }
  }
}
