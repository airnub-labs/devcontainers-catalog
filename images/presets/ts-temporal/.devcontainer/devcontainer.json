{
  "name": "TypeScript + Temporal",
  "remoteUser": "vscode",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": {
      "BASE_IMAGE": "ghcr.io/airnub-labs/devcontainer-images/dev-base:ubuntu-24.04"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "24", "installPnpm": true }
  },
  "customizations": {
    "vscode": {
      "settings": { "remote.downloadExtensionsLocally": "always", "telemetry.telemetryLevel": "off" },
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"]
    }
  }
}
