{
  "name": "airnub-labs â€” node + pnpm",
  "remoteUser": "vscode",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "BASE_IMAGE": "ghcr.io/airnub-labs/devcontainer-images/dev-base:ubuntu-24.04"
    }
  },
  "workspaceFolder": "/airnub-labs",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "installPnpm": true
    }
  },
  "containerEnv": {
    "PNPM_HOME": "/home/vscode/.local/share/pnpm",
    "PNPM_STORE_PATH": "/home/vscode/.pnpm-store"
  },
  "mounts": [
    "source=global-pnpm-store,target=/home/vscode/.pnpm-store,type=volume"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "remote.downloadExtensionsLocally": "always",
        "telemetry.telemetryLevel": "off",
        "typescript.tsdk": "node_modules/typescript/lib",
        "editor.formatOnSave": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  "postCreateCommand": "bash -lc 'corepack enable || true'"
}
