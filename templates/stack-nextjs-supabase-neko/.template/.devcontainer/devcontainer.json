{
  "name": "stack-nextjs-supabase-neko",
  "dockerComposeFile": ["./docker-compose.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces",
  "runServices": ["devcontainer", "neko"],
  "remoteUser": "vscode",
{{#templateOption.usePrebuiltImage}}
  "image": "ghcr.io/airnub-labs/devcontainer-images/dev-web:latest",
{{/templateOption.usePrebuiltImage}}
{{^templateOption.usePrebuiltImage}}
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
{{/templateOption.usePrebuiltImage}}
  "features": {
    "ghcr.io/airnub-labs/devcontainer-features/chrome-cdp:1": {
      "channel": "{{templateOption.chromeChannel}}",
      "port": {{templateOption.cdpPort}}
    },
    "ghcr.io/airnub-labs/devcontainer-features/supabase-cli:1": {
      "manageLocalStack": true
    }{{#templateOption.includeAgentToolingClis}},
    "ghcr.io/airnub-labs/devcontainer-features/agent-tooling-clis:1": {}
    {{/templateOption.includeAgentToolingClis}}
  },
  "containerEnv": {
    "NEKO_USER_PASSWORD": "student",
    "NEKO_ADMIN_PASSWORD": "admin"
  },
  "forwardPorts": [
    {{templateOption.cdpPort}},
    8080,
    59000
  ],
  "portsAttributes": {
    "{{templateOption.cdpPort}}": {
      "label": "Chrome DevTools"
    },
    "8080": {
      "label": "Neko (sidecar Web UI)",
      "onAutoForward": "openBrowser"
    },
    "59000": {
      "label": "Neko (sidecar TCP mux)",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "./scripts/sidecars-status.sh || true",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "remote.downloadExtensionsLocally": "always",
        "telemetry.telemetryLevel": "off",
        "remote.portsAttributes": {
          "{{templateOption.cdpPort}}": {
            "label": "Chrome DevTools"
          },
          "8080": {
            "label": "Neko (sidecar Web UI)",
            "onAutoForward": "openBrowser"
          },
          "59000": {
            "label": "Neko (sidecar TCP mux)",
            "onAutoForward": "silent"
          }
        }
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "supabase.vscode-supabase-extension",
        "github.copilot",
        "github.copilot-chat",
        "Clinedev.cline"
      ]
    }
  }
}
