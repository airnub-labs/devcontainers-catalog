{
  "name": "stack-nextjs-supabase-novnc",
  "remoteUser": "vscode",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/airnub-labs/devcontainer-features/supabase-cli:1": {
      "manageLocalStack": true
    },
    "ghcr.io/airnub-labs/devcontainer-features/agent-tooling-clis:1": {}
  },
  "forwardPorts": [54326, 3001, 6080, 6379],
  "portsAttributes": {
    "54326": { "label": "Supabase Studio" },
    "3001": { "label": "Webtop (sidecar)" },
    "6080": { "label": "noVNC (sidecar)" },
    "6379": { "label": "Redis (sidecar)" }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "bash .devcontainer/scripts/postStart.sh || true; ./scripts/sidecars-status.sh || true",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "remote.downloadExtensionsLocally": "always",
        "telemetry.telemetryLevel": "off",
        "remote.portsAttributes": {
          "54326": { "label": "Supabase Studio" },
          "3001": { "label": "Webtop (sidecar)" },
          "6080": { "label": "noVNC (sidecar)" },
          "6379": { "label": "Redis (sidecar)" }
        }
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "supabase.vscode-supabase-extension",
        "github.copilot",
        "github.copilot-chat",
        "Clinedev.cline"
      ]
    }
  }
}
