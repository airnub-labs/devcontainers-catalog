{
  "name": "classroom-studio-webtop",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/airnub-labs/devcontainer-features/chrome-cdp:1": {
      "channel": "stable",
      "port": 9225
    },
    "ghcr.io/airnub-labs/devcontainer-features/agent-tooling-clis:1": {}
  },
  "forwardPorts": [9225],
  "portsAttributes": {
    "9225": { "label": "Chrome DevTools" }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "remote.downloadExtensionsLocally": "always",
        "telemetry.telemetryLevel": "off"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
