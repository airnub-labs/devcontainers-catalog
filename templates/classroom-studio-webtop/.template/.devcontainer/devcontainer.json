{
  "name": "classroom-studio-webtop",
  "dockerComposeFile": [
    "./compose.yaml"
  ],
  "service": "dev",
  "runServices": ["dev", "webtop"],
  "workspaceFolder": "/workspaces",
  "containerEnv": {
    "CHROME_POLICY_SOURCE": "{{templateOption.chromePolicies}}"
  },
  "forwardPorts": ["{{templateOption.webtopPort}}"],
  "portsAttributes": {
    "{{templateOption.webtopPort}}": { "label": "Classroom Webtop" }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "remote.downloadExtensionsLocally": "always",
        "telemetry.telemetryLevel": "off"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
