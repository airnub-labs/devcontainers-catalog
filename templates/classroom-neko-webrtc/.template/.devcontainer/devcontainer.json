{
  "name": "classroom-neko-webrtc",
  "dockerComposeFile": ["./docker-compose.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces",
  "runServices": ["devcontainer", "neko"],
  "containerEnv": {
    "NEKO_USER_PASSWORD": "student",
    "NEKO_ADMIN_PASSWORD": "admin"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": []
    }
  },
  "forwardPorts": [8080, 59000],
  "portsAttributes": {
    "8080": { "label": "Neko (Web UI)", "onAutoForward": "openBrowser" },
    "59000": { "label": "Neko (WebRTC TCP mux)", "onAutoForward": "silent" }
  },
  "remoteUser": "vscode"
}
