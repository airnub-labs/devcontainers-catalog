{
  "name": "classroom-kasm-chrome",
  "dockerComposeFile": ["./docker-compose.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces",
  "runServices": ["devcontainer", "kasm-chrome"],
  "containerEnv": {
    "KASM_VNC_PW": "student"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "Clinedev.cline"
      ]
    }
  },
  "forwardPorts": [6901],
  "portsAttributes": {
    "6901": { "label": "Kasm Chrome (HTTPS)", "onAutoForward": "openBrowser" }
  },
  "remoteUser": "vscode"
}
